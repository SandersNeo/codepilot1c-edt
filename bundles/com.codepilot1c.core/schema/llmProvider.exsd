<?xml version='1.0' encoding='UTF-8'?>
<!-- Schema for the llmProvider extension point -->
<schema targetNamespace="com.codepilot1c.core" xmlns="http://www.w3.org/2001/XMLSchema">
<annotation>
      <appinfo>
         <meta.schema plugin="com.codepilot1c.core" id="llmProvider" name="LLM Provider"/>
      </appinfo>
      <documentation>
         Extension point for registering Large Language Model providers.
         Implementations provide access to AI models like Claude, OpenAI GPT, or local Ollama models.
      </documentation>
   </annotation>

   <element name="extension">
      <annotation>
         <appinfo>
            <meta.element />
         </appinfo>
      </annotation>
      <complexType>
         <sequence>
            <element ref="provider" minOccurs="1" maxOccurs="unbounded"/>
         </sequence>
         <attribute name="point" type="string" use="required">
            <annotation>
               <documentation>

               </documentation>
            </annotation>
         </attribute>
         <attribute name="id" type="string">
            <annotation>
               <documentation>

               </documentation>
            </annotation>
         </attribute>
         <attribute name="name" type="string">
            <annotation>
               <documentation>

               </documentation>
               <appinfo>
                  <meta.attribute translatable="true"/>
               </appinfo>
            </annotation>
         </attribute>
      </complexType>
   </element>

   <element name="provider">
      <annotation>
         <documentation>
            Defines an LLM provider implementation.
         </documentation>
      </annotation>
      <complexType>
         <sequence>
            <element ref="description" minOccurs="0" maxOccurs="1"/>
         </sequence>
         <attribute name="id" type="string" use="required">
            <annotation>
               <documentation>
                  Unique identifier for this provider (e.g., &quot;claude&quot;, &quot;openai&quot;, &quot;ollama&quot;).
               </documentation>
            </annotation>
         </attribute>
         <attribute name="name" type="string" use="required">
            <annotation>
               <documentation>
                  Human-readable name for this provider.
               </documentation>
               <appinfo>
                  <meta.attribute translatable="true"/>
               </appinfo>
            </annotation>
         </attribute>
         <attribute name="class" type="string" use="required">
            <annotation>
               <documentation>
                  Fully qualified class name implementing ILlmProvider interface.
               </documentation>
               <appinfo>
                  <meta.attribute kind="java" basedOn=":com.codepilot1c.core.provider.ILlmProvider"/>
               </appinfo>
            </annotation>
         </attribute>
         <attribute name="icon" type="string">
            <annotation>
               <documentation>
                  Path to the provider icon (16x16 PNG).
               </documentation>
               <appinfo>
                  <meta.attribute kind="resource"/>
               </appinfo>
            </annotation>
         </attribute>
      </complexType>
   </element>

   <element name="description" type="string">
      <annotation>
         <documentation>
            Optional description of the provider.
         </documentation>
         <appinfo>
            <meta.element translatable="true"/>
         </appinfo>
      </annotation>
   </element>

   <annotation>
      <appinfo>
         <meta.section type="since"/>
      </appinfo>
      <documentation>
         1.0.0
      </documentation>
   </annotation>

   <annotation>
      <appinfo>
         <meta.section type="examples"/>
      </appinfo>
      <documentation>
         Example of registering a custom LLM provider:

&lt;pre&gt;
&lt;extension point=&quot;com.codepilot1c.core.llmProvider&quot;&gt;
   &lt;provider
       id=&quot;custom&quot;
       name=&quot;Custom Provider&quot;
       class=&quot;com.example.custom.CustomProvider&quot;
       icon=&quot;icons/custom.png&quot;&gt;
       &lt;description&gt;A custom LLM provider&lt;/description&gt;
   &lt;/provider&gt;
&lt;/extension&gt;
&lt;/pre&gt;
      </documentation>
   </annotation>

   <annotation>
      <appinfo>
         <meta.section type="apiinfo"/>
      </appinfo>
      <documentation>
         Providers must implement the com.codepilot1c.core.provider.ILlmProvider interface.
      </documentation>
   </annotation>

   <annotation>
      <appinfo>
         <meta.section type="implementation"/>
      </appinfo>
      <documentation>
         The plugin provides built-in implementations for Claude, OpenAI, and Ollama.
      </documentation>
   </annotation>

   <annotation>
      <appinfo>
         <meta.section type="copyright"/>
      </appinfo>
      <documentation>
         Copyright (c) 2024 Example. All rights reserved.
      </documentation>
   </annotation>

</schema>
